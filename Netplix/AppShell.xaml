<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Netplix.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:Netplix.Pages"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Home"
            Icon="hometab.png"
            ContentTemplate="{DataTemplate pages:MainPage}"
            Route="MainPage" />
        <ShellContent
            Title="Games"
            Icon="game.png"
            ContentTemplate="{DataTemplate pages:MainPage}"
            Route="MainPage1" />
        <ShellContent
            Title="New &amp; Hot"
            Icon="brand_netflix.png"
            ContentTemplate="{DataTemplate pages:MainPage}"
            Route="MainPage2" />
        <ShellContent
            Title="Downloads"
            Icon="download.png"
            ContentTemplate="{DataTemplate pages:MainPage}"
            Route="MainPage3" />
        
    </TabBar>
    

</Shell>
